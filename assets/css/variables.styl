// 1. Colors
$primary_color = #6E00E3
$secondary_color = #8B33E9
$terciary_color = #B680F1
$cuaternary_color = #E2CCF9
$green = #45FFC1;
$white = #FFFFFF
$black = #000000
$gray = #626262
$gray_light = #8E8E8E
$gray_superlight = #F6F6F6

// 2. Height for header sticky and mobile menu popup
$nav_height = 100px

// 5. For root
:root
    --nav-height $nav_height

// 6. Scrollbar Style
body
    &::-webkit-scrollbar 
        width 10px
        border-radius 12px
    &::-webkit-scrollbar-thumb 
        background-color $primary_color
        border-radius 12px
        border 2px solid $white
    &::-moz-scrollbar
        width 10px
        border-radius 12px
    &::-moz-scrollbar-thumb 
        background-color $primary_color
        border-radius 12px
        border 2px solid $white
    &.no-scroll
        overflow hidden
        width 100%
        height 100%
    &.admin-bar
        .section__header 
            top 32px /* Standart Height for bar admin WordPress */
        .bar__top
            top calc(var(--nav-height) + 32px)